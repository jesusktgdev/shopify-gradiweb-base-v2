

{% paginate collection.products by section.settings.pagination %}
  <div id="list-products">
    <div class="grid">
      {% for product in collection.products %}
        {% render 'product-card'
          product: product
        %}
      {% endfor %}
    </div>
  
    {% render 'pagination'
      paginate: paginate,
      anchor: '#list-products'
    %}
  </div>
{% endpaginate %}

{% schema %}
  {
    "name": "Products in collection",
    "tag": "section",
    "class": "collection wrapper",
    "settings": [
      {
        "type": "range",
        "id": "pagination",
        "label": "Products by page",
        "unit": "Pr",
        "min": 1,
        "max": 100,
        "step": 1,
        "default": 6
      }
    ]
  }
{% endschema %}